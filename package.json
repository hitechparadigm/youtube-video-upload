{
  "name": "automated-video-pipeline",
  "version": "1.0.0",
  "description": "AWS-based automated video generation pipeline with configurable media sources, Node.js 20.x runtime, and complete project isolation",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:infrastructure": "node scripts/validate-infrastructure.js",
    "test:integration": "jest --config test/integration/jest.config.js",
    "test:integration:watch": "jest --config test/integration/jest.config.js --watch",
    "test:integration:coverage": "jest --config test/integration/jest.config.js --coverage",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "bootstrap": "cdk bootstrap"
  },
  "devDependencies": {
    "@aws-cdk/assertions": "^1.203.0",
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "aws-cdk": "^2.110.0",
    "aws-cdk-lib": "^2.219.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-ec2": "^3.901.0",
    "@aws-sdk/client-ecs": "^3.901.0",
    "@aws-sdk/client-iam": "^3.901.0",
    "@aws-sdk/client-lambda": "^3.901.0",
    "@aws-sdk/client-polly": "^3.901.0",
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/client-secrets-manager": "^3.450.0",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.3.0",
    "google-auth-library": "^9.4.1",
    "googleapis": "^128.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "aws",
    "lambda",
    "video-generation",
    "youtube-automation",
    "nodejs20",
    "pexels",
    "pixabay",
    "configurable-media-sources"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hitechparadigm/youtube-video-upload.git"
  },
  "license": "MIT"
}
