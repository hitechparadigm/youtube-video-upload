{
    "name": "automated-video-pipeline",
    "version": "4.1.0",
    "description": "Simplified Automated Video Pipeline with Infrastructure as Code",
    "main": "index.js",
    "scripts": {
        "test": "npm run test:syntax && npm run test:pipeline",
        "test:syntax": "node scripts/validate-syntax.js",
        "pre-commit": "npm run test:syntax && npm run lint",
        "test:pipeline": "node test-simplified-pipeline.js",
        "test:full": "node test-final-working-pipeline.js",
        "build": "sam build --template-file template-simplified.yaml",
        "deploy:dev": "sam deploy --config-env dev",
        "deploy:staging": "sam deploy --config-env staging",
        "deploy:prod": "sam deploy --config-env prod",
        "validate": "sam validate --template-file template-simplified.yaml",
        "package": "sam package --template-file template-simplified.yaml --s3-bucket automated-video-pipeline-deployments --output-template-file packaged-template.yaml",
        "local:api": "sam local start-api --template-file template-simplified.yaml",
        "local:invoke": "sam local invoke --template-file template-simplified.yaml",
        "lint": "eslint src/lambda/**/*.js",
        "format": "prettier --write src/lambda/**/*.js",
        "docs": "echo 'Documentation available in README.md and docs/ folder'",
        "clean": "rm -rf .aws-sam packaged-template.yaml",
        "setup": "npm install && sam build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/your-org/automated-video-pipeline.git"
    },
    "keywords": [
        "aws",
        "lambda",
        "sam",
        "serverless",
        "video",
        "automation",
        "cicd",
        "infrastructure-as-code"
    ],
    "author": "Your Organization",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/your-org/automated-video-pipeline/issues"
    },
    "homepage": "https://github.com/your-org/automated-video-pipeline#readme",
    "devDependencies": {
        "eslint": "^8.0.0",
        "jest": "^29.0.0",
        "js-yaml": "^4.1.0",
        "prettier": "^3.0.0"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.0.0",
        "@aws-sdk/client-polly": "^3.0.0",
        "@aws-sdk/client-s3": "^3.0.0",
        "@aws-sdk/client-secrets-manager": "^3.0.0",
        "@aws-sdk/lib-dynamodb": "^3.0.0",
        "@aws-sdk/util-dynamodb": "^3.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "cpu": [
        "x64",
        "arm64"
    ]
}
